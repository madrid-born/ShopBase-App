<?xml version="1.0" encoding="utf-8"?>

<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaseShop.Pages.CustomTabbedPage"
             xmlns:local="clr-namespace:BaseShop.Pages"
             xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             android:TabbedPage.ToolbarPlacement="Bottom"
             SelectedTabColor="#00C569"
             UnselectedTabColor="White"
             BarBackgroundColor="LightGray"
             >
    

    <local:Profile Title="Profile" IconImageSource="profile.svg" />
    <local:HomePage Title="Shop" IconImageSource="home.svg"/>
    <local:Cart Title="Cart" IconImageSource="cart.svg"/>
</TabbedPage>